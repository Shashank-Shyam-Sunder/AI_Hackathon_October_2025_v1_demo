{
  "meta": {
    "name": "Windshield"
  },
  "app_brief": "I want to build an AI-powered platform that can analyze uploaded research papers, extract the key findings, translate the summaries into French and Spanish, and generate a short question-answer chatbot that helps users explore the content interactively. The app should store the embeddings for each paper so that users can query them later. I also want the system to monitor model performance and usage metrics",
  "traffic": {
    "users": 100,
    "rpm": 30,
    "qpm": 30,
    "tokens_in": 500,
    "tokens_out": 300
  },
  "ops": {
    "availability_target": 99.0,
    "monitoring_tier": "Standard",
    "compliance": "HIPAA"
  },
  "preferences": {
    "hosting": "api"
  },
  "rag": {
    "enabled": true,
    "corpus_gb": 5.0,
    "embed_model": null,
    "refresh_rate": "monthly",
    "avg_chunk_tokens": 650,
    "chunk_granularity": "medium"
  },
  "i18n": {
    "translation_required": true,
    "language_pairs_raw": "english french, english spanish",
    "language_pairs": "english->french, english->spanish",
    "language_pairs_parsed": [
      {
        "source": "english",
        "target": "french"
      },
      {
        "source": "english",
        "target": "spanish"
      }
    ]
  },
  "internals": {
    "monitoring": {
      "provider": "langsmith",
      "use_tiers": false
    },
    "guardrails_enabled": true,
    "embedding_model_default": "text-embedding-3-large"
  },
  "detected_tasks": []
}